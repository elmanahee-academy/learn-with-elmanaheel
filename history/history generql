];
        
        // Variables d'état
        let currentCourseIndex = -1;
        let currentTab = 'explanation';
        
        // Initialisation
        function initInterface() {
            const lessonsList = document.getElementById('lessonsList');
            
            // Remplir la liste des cours
            coursesData.forEach((course, index) => {
                const lessonCard = document.createElement('div');
                lessonCard.className = 'lesson-card';
                lessonCard.innerHTML = `
                    <h3 class="lesson-title">${course.title}</h3>
                    <p class="lesson-desc">${course.description}</p>
                `;
                lessonCard.addEventListener('click', () => loadCourse(index));
                lessonsList.appendChild(lessonCard);
            });
            
            // Écouteurs d'événements
            document.getElementById('coursesBtn').addEventListener('click', showCoursesList);
            document.getElementById('prevBtn').addEventListener('click', showPreviousCourse);
            document.getElementById('nextBtn').addEventListener('click', showNextCourse);
            document.getElementById('explanationTab').addEventListener('click', () => switchTab('explanation'));
            document.getElementById('testTab').addEventListener('click', () => switchTab('test'));
            document.getElementById('notesTab').addEventListener('click', () => switchTab('notes'));
            document.getElementById('startBtn').addEventListener('click', startLearning);
        }
        
        // Charger un cours
        function loadCourse(index) {
            if (index >= 0 && index < coursesData.length) {
                currentCourseIndex = index;
                const course = coursesData[index];
                
                document.getElementById('explanationContent').innerHTML = course.explanation;
                document.getElementById('testContent').innerHTML = course.test;
                document.getElementById('notesContent').innerHTML = course.notes;
                
                document.getElementById('explanationTitle').textContent = course.title;
                document.getElementById('testTitle').textContent = course.title;
                document.getElementById('notesTitle').textContent = course.title;
                
                showCoursesContent();
                switchTab('explanation');
            }
        }
        
        // Afficher la liste des cours
        function showCoursesList() {
            document.getElementById('lessonsListSection').style.display = 'block';
            document.getElementById('explanationSection').style.display = 'none';
            document.getElementById('testSection').style.display = 'none';
            document.getElementById('notesSection').style.display = 'none';
            currentCourseIndex = -1;
        }
        
        // Afficher le contenu d'un cours
        function showCoursesContent() {
            document.getElementById('lessonsListSection').style.display = 'none';
            document.getElementById('explanationSection').style.display = 'none';
            document.getElementById('testSection').style.display = 'none';
            document.getElementById('notesSection').style.display = 'none';
            
            document.getElementById(`${currentTab}Section`).style.display = 'block';
        }
        
        // Changer d'onglet
        function switchTab(tab) {
            currentTab = tab;
            
            document.getElementById('explanationTab').classList.remove('active');
            document.getElementById('testTab').classList.remove('active');
            document.getElementById('notesTab').classList.remove('active');
            
            document.getElementById(`${tab}Tab`).classList.add('active');
            
            if (currentCourseIndex !== -1) {
                showCoursesContent();
            }
        }
        
        // Cours précédent
        function showPreviousCourse() {
            if (currentCourseIndex > 0) {
                loadCourse(currentCourseIndex - 1);
            }
        }
        
        // Cours suivant
        function showNextCourse() {
            if (currentCourseIndex < coursesData.length - 1) {
                loadCourse(currentCourseIndex + 1);
            }
        }
        
        // Commencer l'apprentissage
        function startLearning() {
            document.getElementById('welcomeMessage').classList.add('hidden');
            document.getElementById('mainInterface').classList.remove('hidden');
            showCoursesList();
        }
        
        // Initialiser l'interface
        window.onload = initInterface;
    </script>
</body>
</html>
